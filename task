<body>
  <h1>Google Analytics Event Tracking Demo</h1>
  <p>Click the button below. The click event will be sent to Google Analytics.</p>

  <button id="trackBtn">Click Me</button>

  <script>
    document.getElementById('trackBtn').addEventListener('click', function () {
      console.log("Button clicked â€” sending event to GA");

      gtag('event', 'button_click', {
        'event_category': 'interaction',
        'event_label': 'demo_button',
        'value': 1
      });
    });
  </script>
